{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "Locations": {
            "type": "object",
            "properties": {
                "MajorLocations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Source": {
                                "$ref": "#/$defs/ValidSources"
                            },
                            "Item": {
                                "$ref": "#/$defs/ValidItems"
                            }
                        },
                        "required": ["Source", "Item"]
                    }
                },
                "MinorLocations": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "Area": {
                                "$ref": "#/$defs/TypeU8"
                            },
                            "Room": {
                                "$ref": "#/$defs/TypeU8"
                            },
                            "BlockX": {
                                "$ref": "#/$defs/TypeU8"
                            },
                            "BlockY": {
                                "$ref": "#/$defs/TypeU8"
                            },
                            "Item": {
                                "$ref": "#/$defs/ValidItems"
                            }
                        },
                        "required": ["Area", "Room", "BlockX", "BlockY", "Item"]
                    }
                }
            },
            "required": ["MinorLocations", "MajorLocations"]
        },
        "TankIncrements": {
            "type": "object",
            "properties": {
                "MissileTank": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5
                },
                "EnergyTank": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 100
                },
                "PowerBombTank": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 2
                }
            },
            "required": ["MissileTank", "EnergyTank", "PowerBombTank"]
        },
        "Palettes": {
            "type": "object",
            "properties": {
                "Seed": {
                    "$ref": "#/$defs/Seed"
                },
                "Randomize": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["Tilesets", "Enemies", "Samus", "Beams"]
                    }
                },
                "HueMin": {
                    "$ref": "#/$defs/HueRotation"
                },
                "HueMax": {
                    "$ref": "#/$defs/HueRotation"
                },
                "ColorSpace": {
                    "type": "string",
                    "enum": ["HSV", "LAB"]
                }
            },
            "required": ["Randomize"]
        },
        "SkipDoorTransitions": {
            "type": "boolean"
        }
    },
    "required": ["Locations", "SkipDoorTransitions"],
    "$defs": {
        "TypeU8": {
            "type": "integer",
            "minimum": 0,
            "maximum": 255
        },
        "Seed": {
            "type": "integer",
            "minimum": 0,
            "maximum": 2147483647
        },
        "HueRotation": {
            "type": "integer",
            "minimum": 0,
            "maximum": 180
        },
        "ValidSources": {
            "type": "string",
            "enum": [
                "MainDeckData",
                "Arachnus",
                "ChargeCoreX",
                "Level1",
                "TroData",
                "Zazabi",
                "Serris",
                "Level2",
                "PyrData",
                "MegaX",
                "Level3",
                "ArcData1",
                "WideCoreX",
                "ArcData2",
                "Yakuza",
                "Nettori",
                "Nightmare",
                "Level4",
                "AqaData",
                "WaveCoreX",
                "Ridley"
            ]
        },
        "ValidItems": {
            "type": "string",
            "enum": [
                "None",
                "Missiles",
                "MorphBall",
                "ChargeBeam",
                "Level1",
                "Bombs",
                "HiJump",
                "SpeedBooster",
                "Level2",
                "SuperMissiles",
                "VariaSuit",
                "Level3",
                "IceMissiles",
                "WideBeam",
                "PowerBombs",
                "SpaceJump",
                "PlasmaBeam",
                "GravitySuit",
                "Level4",
                "DiffusionMissiles",
                "WaveBeam",
                "ScrewAttack",
                "IceBeam",
                "MissileTank",
                "EnergyTank",
                "PowerBombTank"
            ]
        }
    }
}
